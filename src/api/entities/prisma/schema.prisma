// schema.prisma

// Generate Prisma client
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id          String    @id @default(uuid()) @map("id")
  name String
  provinces Province[]

  @@map("country") 
}

model Province {
  id         String   @id @default(uuid()) @map("id")
  name       String
  country    Country @relation(fields: [id_country], references: [id])
  id_country String

  @@map("province")
}

model Taster {
  id          String    @id @default(uuid()) @map("id")
  name        String
  twitter_handle  String

  @@map("taster") 
}
